<%= form_with(model: [@recipe, @ingredient], url: recipe_ingredients_path(@recipe)) do |form| %>
  <%= form.label :food_id %>
  <%= form.select :food_id, options_for_select(@foods.map { |food| [food.name, food.id] }), {}, class: 'form-control' %>

  <%= form.label :quantity %>
  <%= form.number_field :quantity, class: 'form-control' %>

  <%= form.submit 'Add Ingredient', class: 'btn btn-primary' %>
<% end %>

<div class="container mt-5">
  <h1 class="display-3">Welcome to the Dashboard</h1>

  <div class="row mt-5">
    <div class="col-md-6">
      <%= link_to "Recipes", recipes_path, class: "btn btn-primary btn-lg btn-block" %>
    </div>
    <div class="col-md-6">
      <%= link_to "Foods", foods_path, class: "btn btn-success btn-lg btn-block" %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-6">
      <%= render 'create_recipe_form' %>
    </div>
    <div class="col-md-6">
      <%= render 'create_food_form', new_food: @food %>
    </div>
  </div>

  <!-- Additional Content with Bootstrap Styling -->
  <div class="row mt-5">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Additional Content</h2>
          <p class="card-text">You can add more content here...</p>
        </div>
      </div>
    </div>
  </div>
</div>

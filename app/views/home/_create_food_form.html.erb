<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h3 class="mb-4">Add your food</h3>

      <%= form_for new_food, url: create_food_path, method: :post, html: { class: 'mb-4' } do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: 'form-label' %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :measurement_unit, class: 'form-label' %><br>
          <%= f.select :measurement_unit, ['Unit', 'Kg', 'Liter'], { prompt: 'Select Unit' }, class: 'form-select' %>
        </div>
        <div class="mb-3">
          <%= f.label :unit_price, class: 'form-label' %><br>
          <%= f.text_field :unit_price, class: 'form-control' %>
        </div>
        <div class="text-center">
          <%= f.submit "Add Food", class: 'btn btn-success btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<h2>Add Ingredient to <%= @recipe.title %></h2>

<%= form_with(model: [@recipe, Ingredient.new], url: create_ingredient_recipe_path(@recipe), local: true) do |form| %>
  <%= form.label :food_id %>
  <%= form.select :food_id, options_for_select(@foods.map { |food| [food.name, food.id] }), {}, class: 'form-control' %>
  
  <%= form.label :quantity %>
  <%= form.number_field :quantity, class: 'form-control' %>

  <%= form.submit 'Add Ingredient', class: 'btn btn-primary' %>
<% end %>



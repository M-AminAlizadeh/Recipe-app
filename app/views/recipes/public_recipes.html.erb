<h2>Public Recipes</h2>
<div class="recipe-list">
  <% @public_recipes.each do |recipe| %>
    <div class="recipe">
      <h3><%= recipe.title %></h3>
      <p>By: <%= recipe.user.name %></p>
      <p>Total Food Items: <%= recipe.ingredients.count %></p>
      <p>Total Price: <%= calculate_total_price(recipe) %></p>
    </div>
  <% end %>
</div>

